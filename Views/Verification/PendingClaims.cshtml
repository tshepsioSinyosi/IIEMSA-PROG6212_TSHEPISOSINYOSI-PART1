@model IEnumerable<Claim>
<h2>Pending Claims</h2>

<table>
    <thead><tr><th>ID</th><th>Lecturer</th><th>Hours</th><th>Rate</th><th>Notes</th><th>Files</th><th>Actions</th></tr></thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Id</td>
                <td>@c.LecturerId</td> <!-- for better UI, join with Users to display full name -->
                <td>@c.HoursWorked</td>
                <td>@c.HourlyRate</td>
                <td>@c.Notes</td>
                <td>
                    @if (c.SupportingDocuments != null)
                    {
                        foreach (var d in c.SupportingDocuments)
                        {
                            <a asp-controller="Claim" asp-action="DownloadDoc" asp-route-id="@d.Id">@d.FileName</a>
                
                            <br />
                        }
                    }
                </td>
                <td>
                    <form asp-controller="Verification" asp-action="ApproveClaim" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@c.Id" />
                        <button type="submit">Approve</button>
                    </form>
                    <form asp-controller="Verification" asp-action="RejectClaim" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@c.Id" />
                        <button type="submit">Reject</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
