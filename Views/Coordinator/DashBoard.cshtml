@using ContractMonthlyClaimsSystem.Models
@model List<Claim>

@{
    ViewData["Title"] = "Coordinator Dashboard - Pending Claims";
}

<div class="container py-5">
    <h1 class="text-primary-emphasis mb-4">Claims Awaiting Review (@(Model?.Count() ?? 0))</h1>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-success text-center mt-5" role="alert">
            <i class="fas fa-check-circle me-2"></i> All clear! There are currently no claims awaiting your review.
        </div>
    }
    else
    {
        <div class="card shadow">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover table-striped mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th>Claim ID</th>
                                <th>Lecturer</th>
                                <th>Date Submitted</th>
                                <th>Total Amount</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model)
                            {
                                <tr>
                                    <td>@claim.ClaimId</td>
                                    <td>@claim.Lecturer.FullName</td>
                                    <td>@claim.SubmissionDate.ToShortDateString()</td>
                                    <td>@(claim.HoursWorked* claim.HourlyRate).ToString("C")</td>
                                    <td>
                                        <span class="badge bg-warning text-dark fw-bold">@claim.Status</span>
                                    </td>
                                    <td>
                                        <!-- View Details Button -->
                                        <a asp-controller="Claim" asp-action="Details" asp-route-id="@claim.ClaimId" class="btn btn-sm btn-info text-white me-2" title="Review Details and Documents">
                                            <i class="fas fa-search"></i> Review
                                        </a>

                                        <!-- Approve Button (POST action to ClaimController) -->
                                        <form asp-controller="Claim" asp-action="Approve" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to APPROVE Claim ID @claim.ClaimId?');">
                                            <input type="hidden" name="id" value="@claim.ClaimId" />
                                            <button type="submit" class="btn btn-sm btn-success" title="Approve Claim">
                                                <i class="fas fa-check"></i> Approve
                                            </button>
                                        </form>

                                        <!-- Reject Button (POST action to ClaimController) -->
                                        <form asp-controller="Claim" asp-action="Reject" method="post" style="display:inline; margin-left: 5px;" onsubmit="return confirm('Are you sure you want to REJECT Claim ID @claim.ClaimId?');">
                                            <input type="hidden" name="id" value="@claim.ClaimId" />
                                            <button type="submit" class="btn btn-sm btn-danger" title="Reject Claim">
                                                <i class="fas fa-times"></i> Reject
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
