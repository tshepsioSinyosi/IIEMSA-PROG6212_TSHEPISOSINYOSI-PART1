@using ContractClaimSystem.Models
@model List<Claim>

@{
    ViewData["Title"] = "Coordinator Dashboard - Pending Claims";

    // Example: Selected filter coming from ViewBag
    var statusFilter = ViewBag.StatusFilter as string ?? "";
}

<div class="container py-5">
    <h2 class="mb-4 text-primary">Claims Awaiting Review (@Model?.Count() ?? 0)</h2>

    <div class="mb-3">
        <label for="statusFilter" class="form-label">Filter by Status:</label>
        @{
            string GetSelected(string value) => value == statusFilter ? "selected" : null;
        }

        <select id="statusFilter" class="form-select" onchange="location = this.value;">
            <option value="@Url.Action("Dashboard", "Coordinator", new { status = "" })" selected="@GetSelected("")">All</option>
            <option value="@Url.Action("Dashboard", "Coordinator", new { status = "Pending" })" selected="@GetSelected("Pending")">Pending</option>
            <option value="@Url.Action("Dashboard", "Coordinator", new { status = "Approved" })" selected="@GetSelected("Approved")">Approved</option>
            <option value="@Url.Action("Dashboard", "Coordinator", new { status = "Rejected" })" selected="@GetSelected("Rejected")">Rejected</option>
        </select>

    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-success text-center mt-5">
            <i class="fas fa-check-circle me-2"></i> All clear! No pending claims at the moment.
        </div>
    }
    else
    {
        <div class="card shadow">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover table-striped mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th>Claim ID</th>
                                <th>Lecturer</th>
                                <th>Date Submitted</th>
                                <th>Hours</th>
                                <th>Rate</th>
                                <th>Total Amount</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model)
                            {
                                // Flag if claim has no supporting documents
                                var missingDocs = claim.SupportingDocuments == null || !claim.SupportingDocuments.Any();
                                <tr class="@(missingDocs ? "table-danger" : "")">
                                    <td>@claim.ClaimId</td>
                                    <td>@claim.Lecturer?.FullName</td>
                                    <td>@claim.SubmissionDate.ToShortDateString()</td>
                                    <td>@claim.HoursWorked</td>
                                    <td>@claim.HourlyRate.ToString("C")</td>
                                    <td>@((decimal)claim.HoursWorked * claim.HourlyRate).ToString("C")</td>
                                    <td>
                                        @switch (claim.Status)
                                        {
                                            case ClaimStatus.Approved:
                                                <span class="badge bg-success fw-bold">APPROVED</span>
                                                break;
                                            case ClaimStatus.Rejected:
                                                <span class="badge bg-danger fw-bold">REJECTED</span>
                                                break;
                                            default:
                                                <span class="badge bg-warning text-dark fw-bold">
                                                    PENDING
                                                    @if (missingDocs)
                                                    {
                                                        <span title="Missing supporting documents" class="ms-1 text-danger">&#9888;</span>
                                                    }
                                                </span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        <form asp-controller="Claim" asp-action="Approve" method="post" asp-route-id="@claim.ClaimId" style="display:inline;" onsubmit="return confirm('Approve Claim ID @claim.ClaimId?');">
                                            <button class="btn btn-success btn-sm">
                                                <i class="fas fa-check"></i> Approve
                                            </button>
                                        </form>
                                        <form asp-controller="Claim" asp-action="Reject" method="post" asp-route-id="@claim.ClaimId" style="display:inline; margin-left:5px;" onsubmit="return confirm('Reject Claim ID @claim.ClaimId?');">
                                            <button class="btn btn-danger btn-sm">
                                                <i class="fas fa-times"></i> Reject
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        console.log("Coordinator Dashboard loaded");
    </script>
}
