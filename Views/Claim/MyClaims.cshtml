@using ContractClaimSystem.Models
@model IEnumerable<Claim>

@{
    ViewData["Title"] = "Your Claim History";
}

<div class="container py-5">
    <h2 class="mb-4 text-secondary">Your Claim History & Status</h2>
    <p class="lead text-muted">
        A record of all your submitted claims and their current status.
        Highlighted rows indicate claims flagged for review.
    </p>

    <!-- Link to Submit New Claim -->
    <a asp-controller="Claim" asp-action="SubmitClaim" class="btn btn-primary btn-lg mb-4 shadow-sm">
        <i class="fas fa-plus-circle me-2"></i> Submit New Claim
    </a>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info text-center mt-5">
            You have not submitted any claims yet. Use the button above to get started!
        </div>
    }
    else
    {
        <!-- Filters -->
        <div class="row mb-3">
            <div class="col-md-3">
                <label>Filter by Month:</label>
                <select id="monthFilter" class="form-select">
                    <option value="">All</option>
                    @foreach (var month in Model.Select(c => c.SubmissionDate.ToString("MMMM yyyy")).Distinct())
                    {
                        <option value="@month">@month</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label>Filter by Status:</label>
                <select id="statusFilter" class="form-select">
                    <option value="">All</option>
                    <option value="Pending">Pending</option>
                    <option value="Approved">Approved</option>
                    <option value="Rejected">Rejected</option>
                </select>
            </div>
        </div>

        <div class="card shadow">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover table-striped mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th>Claim ID</th>
                                <th>Date Submitted</th>
                                <th>Hours Worked</th>
                                <th>Hourly Rate</th>
                                <th>Total Amount</th>
                                <th>Status</th>
                                <th>Review</th>
                                <th>Documents</th>
                                <th>Details</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model)
                            {
                                var rowClass = claim.RequiresReview ? "table-warning" : "";
                                <tr class="@rowClass">
                                    <td>@claim.ClaimId</td>
                                    <td>@claim.SubmissionDate.ToShortDateString()</td>
                                    <td>@claim.HoursWorked</td>
                                    <td>@claim.HourlyRate</td>
                                    <td>@claim.TotalAmount</td>

                                    <td>
                                        @switch (claim.Status)
                                        {
                                            case ClaimStatus.Approved:
                                                <span class="badge bg-success fw-bold">APPROVED</span>
                                                break;
                                            case ClaimStatus.Rejected:
                                                <span class="badge bg-danger fw-bold">REJECTED</span>
                                                break;
                                            default:
                                                <span class="badge bg-warning text-dark fw-bold">PENDING</span>
                                                break;
                                        }
                                    </td>

                                    <td>
                                        @if (claim.RequiresReview)
                                        {
                                            <span class="text-danger fw-bold">Flagged for review</span>
                                        }
                                        else
                                        {
                                            <span class="text-success fw-bold">Auto-approved</span>
                                        }
                                    </td>

                                    <td>
                                        @if (claim.SupportingDocuments != null && claim.SupportingDocuments.Any())
                                        {
                                            <ul class="list-unstyled mb-0">
                                                @foreach (var doc in claim.SupportingDocuments)
                                                {
                                                    <li>
                                                        <a href="@doc.FileName" target="_blank">@doc.FileName</a>
                                                    </li>
                                                }
                                            </ul>
                                        }
                                        else
                                        {
                                            <span class="text-muted">None</span>
                                        }
                                    </td>

                                    <td>
                                        <a asp-controller="Claim" asp-action="Details" asp-route-id="@claim.ClaimId" class="btn btn-sm btn-outline-info">
                                            <i class="fas fa-eye"></i> View
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>

                        <tfoot class="table-light fw-bold">
                            <tr>
                                <td colspan="2" class="text-end">Totals:</td>
                                <td>@Model.Sum(c => c.HoursWorked)</td>
                                <td>-</td>
                                <td>@Model.Sum(c => c.TotalAmount)</td>
                                <td colspan="4"></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        const monthFilter = document.getElementById('monthFilter');
        const statusFilter = document.getElementById('statusFilter');
        const tableRows = document.querySelectorAll('table tbody tr');

        function filterTable() {
            const selectedMonth = monthFilter.value;
            const selectedStatus = statusFilter.value;

            tableRows.forEach(row => {
                const rowMonth = row.cells[1].innerText; // Submission Date
                const rowStatus = row.cells[4].innerText.trim(); // Status column (text number may vary)
                const rowStatusBadge = row.cells[5].innerText.trim(); // Badge text

                const monthMatch = !selectedMonth || rowMonth.includes(selectedMonth);
                const statusMatch = !selectedStatus || rowStatusBadge === selectedStatus;

                row.style.display = (monthMatch && statusMatch) ? '' : 'none';
            });
        }

        monthFilter.addEventListener('change', filterTable);
        statusFilter.addEventListener('change', filterTable);
    </script>
}
