@using ContractClaimSystem.Models
@model IEnumerable<Claim>

@{
    ViewData["Title"] = "Your Claim History";
}

<div class="container py-5">
    <h2 class="mb-4 text-secondary">Your Claim History & Status</h2>
    <p class="lead text-muted">A record of all your submitted claims and their current status.</p>

    <!-- Link to Submit New Claim -->
    <a asp-controller="Claim" asp-action="SubmitClaim" class="btn btn-primary btn-lg mb-4 shadow-sm">
        <i class="fas fa-plus-circle me-2"></i> Submit New Claim
    </a>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info text-center mt-5">
            You have not submitted any claims yet. Use the button above to get started!
        </div>
    }
    else
    {
        <div class="card shadow">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover table-striped mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th>Claim ID</th>
                                <th>Date Submitted</th>
                                <th>Hours Worked</th>
                                <th>Hourly Rate</th>
                                <th>Total Amount</th>
                                <th>Status</th>
                                <th>Documents</th>
                                <th>Details</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model)
                            {
                                <tr>
                                    <td>@claim.ClaimId</td>
                                    <td>@claim.SubmissionDate.ToShortDateString()</td>
                                    <td>@claim.HoursWorked</td>
                                    <td>@claim.HourlyRate.ToString("C")</td>
                                    <td>@claim.TotalAmount.ToString("C")</td>
                                    <td>
                                        @switch (claim.Status)
                                        {
                                            case ClaimStatus.Approved:
                                                <span class="badge bg-success fw-bold">APPROVED</span>
                                                break;
                                            case ClaimStatus.Rejected:
                                                <span class="badge bg-danger fw-bold">REJECTED</span>
                                                break;
                                            default:
                                                <span class="badge bg-warning text-dark fw-bold">PENDING</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        @if (claim.SupportingDocuments != null && claim.SupportingDocuments.Any())
                                        {
                                            <ul class="list-unstyled mb-0">
                                                @foreach (var doc in claim.SupportingDocuments)
                                                {
                                                    <li>
                                                        <a href="@doc.FileName" target="_blank">@doc.FileName</a>
                                                    </li>
                                                }
                                            </ul>
                                        }
                                        else
                                        {
                                            <span class="text-muted">None</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-controller="Claim" asp-action="Details" asp-route-id="@claim.ClaimId" class="btn btn-sm btn-outline-info">
                                            <i class="fas fa-eye"></i> View
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
