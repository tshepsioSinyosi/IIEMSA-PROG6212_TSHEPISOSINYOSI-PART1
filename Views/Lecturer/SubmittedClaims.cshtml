@model IEnumerable<ContractClaimSystem.Models.Claim>

<h2>My Submitted Claims</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Date</th>
            <th>Hours</th>
            <th>Rate</th>
            <th>Notes</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.SubmissionDate.ToShortDateString()</td>
                <td>@claim.HoursWorked</td>
                <td>@claim.HourlyRate</td>
                <td>@claim.AdditionalNotes</td>
                <td>
                    @if (claim.Status == ContractClaimSystem.Models.ClaimStatus.Pending)
                    {
                        <span class="badge bg-warning">Pending</span>
                    }
                    else if (claim.Status == ContractClaimSystem.Models.ClaimStatus.Approved)
                    {
                        <span class="badge bg-success">Approved</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Rejected</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
