@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Submit Claim";
}

<div class="container mt-5">
    <h2 class="text-center mb-4" style="color:#007ACC;">Submit New Claim</h2>

    <form>
        <div class="mb-3">
            <label class="form-label">Month</label>
            <input type="month" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Hours Worked</label>
            <input type="number" class="form-control" placeholder="Enter total hours" />
        </div>
        <div class="mb-3">
            <label class="form-label">Hourly Rate</label>
            <input type="text" class="form-control" value="$20" readonly />
        </div>

        <button type="submit" class="btn btn-gradient w-100">Submit Claim</button>
    </form>
</div>

<style>
    .btn-gradient {
        background: linear-gradient(45deg, #007ACC, #00CFFF);
        color: white;
        font-weight: bold;
        padding: 12px 25px;
        border-radius: 8px;
        text-decoration: none;
        transition: 0.3s;
    }

        .btn-gradient:hover {
            background: linear-gradient(45deg, #005B99, #00A7CC);
        }
</style>
