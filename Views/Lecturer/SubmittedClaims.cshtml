@using ContractMonthlyClaimsSystem.Models
@model List<Claim>

@{
    ViewData["Title"] = "Submitted Claims History";
}

<div class="container py-5">
    <h1 class="text-primary-emphasis mb-4">Detailed Submitted Claims</h1>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info text-center mt-5" role="alert">
            <i class="fas fa-info-circle me-2"></i> No claims have been submitted yet.
        </div>
    }
    else
    {
        <div class="card shadow">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover table-striped mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th>Claim ID</th>
                                <th>Date Submitted</th>
                                <th>Hours Claimed</th>
                                <th>Total Amount</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model)
                            {
                                string badgeClass = claim.Status switch
                                {
                                    "Approved" => "bg-success",
                                    "Rejected" => "bg-danger",
                                    _ => "bg-warning text-dark" // Pending
                                };

                                <tr>
                                    <td>@claim.ClaimId</td>
                                    <td>@claim.SubmissionDate.ToShortDateString()</td>
                                    <td>@claim.HoursWorked</td>
                                    <td>@(claim.HoursWorked* claim.HourlyRate).ToString("C")</td>
                                    <td>
                                        <span class="badge @badgeClass fw-bold">@claim.Status</span>
                                    </td>
                                    <td>
                                        <a asp-controller="Claim" asp-action="Details" asp-route-id="@claim.ClaimId" class="btn btn-sm btn-outline-info">
                                            View Details
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
